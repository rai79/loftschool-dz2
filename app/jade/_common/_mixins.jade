mixin socials(socialItems)
	ul.socials__list
		each item in socialItems
			li.socials__item
				a.socials__link(href="#" class="socials__link_#{item}")

mixin breadcrumbs(items)
	ul.breadcrumbs__list
		each item, idx in items
			li.breadcrumbs__item(class="#{idx == items.length-1 ? 'breadcrumbs__item_active' : ''}")
				a(href="#").breadcrumbs__link= item

mixin menu(menuItems, indexActive)
	ul.nav__list
		each item, idx in menuItems
			li.nav__item(class="#{idx == indexActive-1 ? 'nav__item_active' : ''}")
				a(href="#").nav__link= item

mixin goods-brands(brandsItems)
	fieldset.goods-brands
		each item in brandsItems
			input(name="goods-brands" id="checkbox-#{item}" type="checkbox" value=item).goods-brands__input
			label(for='checkbox-#{item}').goods__label_checkbox=item
		a(href="#").goods-brands__reset Сбросить фильтр

mixin goods-colors(colorsItems)
	fieldset.goods-colors
		ul.goods-colors__list
			each value, key in colorsItems
				li.goods-colors__item
					.goods-colors__box(class="box-#{key}")
					

